{{#partial "content"}}
    <p>Walker:</p>
    <p>{{ Walker.walkerName }}</p>
    <h5>Walker status:</h5>
    <p>
        {{#if Walker.walkerName }}
            <span class="glyphicon glyphicon-star" aria-hidden="true"></span>  Current
        {{else}}
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Available
        {{/if}}
        <a href="/walkers/{{walker.id}}/update">Update this walker</a>
        <a href="/walkers/{{walker.id}}/delete">DELETE this walker</a>
    </p>
{{/partial}}

{{> layout.hbs}}