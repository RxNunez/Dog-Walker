{{#partial "content"}}

    <p>Here are all the dogs: </p>

    <ul>

        <li>
            <h2>Dog Name:</h2>
            <p>{{dog.dogName}}</p>
            <h2>Breed:</h2>
            <p>{{dog.breed}}</p>
            <h2>Color:</h2>
            <p>{{dog.color}}</p>
            <h2>Dog status:</h2>
            {{#if completed }}
                <span class="glyphicon glyphicon-star" aria-hidden="true"></span>  Completed
            {{else}}
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Open
            {{/if}}
            <br>
            <a href="/dogs/update">Edit this dog</a><br>
            <a href="/dogs/delete">DELETE this dog (no undo)</a>
            </p>
        </li>

    </ul>
    <a href="/walkers/{{walker.id}}/update">Edit this walker</a><br>
    <a href="/walkers/{{walker.id}}/delete">DELETE this walker (no undo)</a>

{{/partial}}

