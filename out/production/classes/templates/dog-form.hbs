{{#partial "content"}}

    {{#if editDog}}
        <form action="/dog/update" method="post">
            <h1>Edit this Dog!</h1>
            <select id="dogToEditId" name="dogToEditId">
                {{#each dog }}
                    <option value="{{id}}">{{dogname}}</option>
                {{/each}}
            </select>
            <label for="dogname">Edit this dog's name</label>
            <input id="dogname" name="dogname" type="text" placeholder="Enter a new walkername">
            <br>
            <label for="breed">Edit this dog's breed</label>
            <input id="breed" name="breed" type="text" placeholder="Enter a new breed">
            <br>
            <label for="color">Dog color</label>
            <input id="color" name="color" type="text">
            <br>
            <label for="walkerId">Update this dog's walker:</label>
            <select id="walkerId" name="walkerId">
                {{#each walker}}
                    <option value="{{id}}">{{walkername}}</option>
                {{/each}}
            </select>
            <p>Don't see the right walker?<a href="/walker/new">Add a new one first.</a></p>
        </form>
    {{else}}
        <h2>Add a new Dog!</h2>

        <form action="/dog/new" method="post">
        {{#if walker}}
                <label for="dogname">Edit this dog's name</label>
                <input id="dogname" name="dogname" type="text" placeholder="Enter a new dogname">
                <br>
                <label for="breed">Edit this dog's breed</label>
                <input id="breed" name="breed" type="text" placeholder="Enter a new breed">
                <br>
                <label for="color">Weed color</label>
                <input id="color" name="color" type="text">
                <br>
                <label for="walkerId">Update this dog's walker:</label>
                <select id="walkerId" name="walkerId">
                    {{#each walker}}
                        <option value="{{id}}">{{walkername}}</option>
                    {{/each}}
                </select>
                <p>Don't see the right walker?<a href="/walker/new">Add a new one first.</a></p>
        {{else}}
                <h3> You'll need to add a walker before you add a dog. <a href="/walker/new">Add one here.</a> </h3>
        {{/if}}

    {{/if}}
        <button type="submit" class="btn btn-default">Go!</button>
    </form>

{{/partial}}

{{> layout.hbs}}